<main>

    <div class="container mt-4">
        <!-- Barra de búsqueda y filtros --> 

    <div class="contenedor-filtros">

        <form method="get" action="@Url.Action("Index", "Home")">
            <div class="row">

                <!-- Buscar por Nombre -->
                <div class="col-md-4 mb-3">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Cualquiera" />
                </div>

                <!-- Buscar por Marca | esto a la ez lo que esta haciendo es jalar el viewbag de marcas para presentarlas al usuario , esto incluye si un vendedor mete una neuva marca tambien-->
                <div class="col-md-4 mb-3">
                    <label for="personas">Personas:</label>
                    <select class="form-control" id="personas" name="personas">
                        <option value="">Cantidad de Personas</option>
                        @foreach (var personas in ViewBag.Personas as SelectList)
                        {
                            <option value="@personas.Value">@personas.Text</option>
                        }
                    </select>
                </div>

                <!--CATEGORIA CON UN DROPDOWN QUE MUESTRE A LA PERSONA LAS CATEGORIAS QUE TNEMOS -->
                <div class="col-md-4 mb-3">
                    <label for="marca">Categoria:</label>
                    <select class="form-control" id="categoria" name="categoria">
                        <option value="">Cualquier Categoria</option>
                        @foreach (var categoria in ViewBag.Categoria as SelectList)
                        {
                            <option value="@categoria.Value">@categoria.Text</option>
                        }
                    </select>
                </div>


                <!-- Buscar por Lugar -->
                <div class="col-md-4 mb-3">
                    <label for="color">Lugar:</label>
                    <input type="text" class="form-control" id="lugar" name="lugar" placeholder="Cualquiera" />
                </div>

                <!-- Buscar por Proveedor -->
                <div class="col-md-4 mb-3">
                    <label for="proveedor">Proveedor:</label>
                    <select class="form-control" id="proveedor" name="proveedor">
                        <option value="">Seleccionar</option>
                        <option value="M">Baja</option>
                        <option value="F">Alta</option>
                    </select>
                </div>


                <!-- Buscar por Precio -->
                <div class="col-md-4 mb-3">
                    <label for="precioMax">Precio Máximo:</label>
                    <input type="range" id="precioMax" name="precioMax" min="1" max="1000" step="10" value="1000" placeholder="Cualquiera" />  <!--Range limit , eto nos sirve para que la persona pueda elegir el precio , el minimo es 1 para testing y su maxio valor quemado es 1000-->
                    <output for="precioMax" id="precioMaxOutput">$1000</output>
                </div>


                <!--BOTON DE BUSCAR -->
                <div class="col-md-2 mb-3">
                    <button type="submit" class="button-85">Buscar</button>
                </div>
            </div>
        </form>


    </div>





        <div class="container mt-4">
            <div class="row">
                @foreach (var producto in Model)
                {
                    <div class="col-md-4 col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@producto.Nombre</h5>
                                <p class="card-text">@producto.Lugar | @(producto.Proveedor == "F" ? "Mujer" : "Hombre") | @producto.Personas |@producto.Categoria</p> <!--Logica que metimos para saber si el zapato es de hombre o mujer e indicarlo en tarjeta jalando los parametros de producto-->

                                <p class="card-text"><strong>Precio: @string.Format("${0:N2}", producto.Precio)  | @producto.CantidadEnStock Disponibles </strong></p> <!--Muestra el valor de las tennis en dolares -->
                                <!-- Contenedor del carrusel para cada tarjeta -->
                                <div id="carouselProducto@(producto.ProductoID)" class="carousel slide" data-bs-ride="carousel" data-bs-interval="10000">
                                    <!-- Hace que la transición dure 10 segundos salvo que la persona cambie a otra imagen -->
                                    <div class="carousel-inner">
                                        <!-- Imagen 1 -->
                                        @if (producto.Imagen != null && producto.Imagen.Length > 0)
                                        {
                                            <div class="carousel-item active">
                                                <img src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen)" alt="Imagen del Producto" class="img-fluid" />
                                            </div>
                                        }

                                        <!-- Imagen 2 -->
                                        @if (producto.Imagen2 != null && producto.Imagen2.Length > 0)
                                        {
                                            <div class="carousel-item @(producto.Imagen == null || producto.Imagen.Length == 0 ? "active" : "")">
                                                <div class="img-container">
                                                    <img src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen2)" alt="Segunda Imagen del Producto" class="img-fluid" />
                                                </div>
                                            </div>
                                        }

                                        <!-- Imagen 3 -->
                                        @if (producto.Imagen3 != null && producto.Imagen3.Length > 0)
                                        {
                                            <div class="carousel-item @(producto.Imagen == null || producto.Imagen.Length == 0 ? "active" : "")">
                                                <div class="img-container">
                                                    <img src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen3)" alt="Tercera Imagen del Producto" class="img-fluid" />
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <!-- Controles personalizados -->
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselProducto@(producto.ProductoID)" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselProducto@(producto.ProductoID)" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>


                                </div>

                                <!-- Acciones -->
                                <div class="mt-3 contenedor-botones" style="display:"flex">
                                  
                                    <button class="btn btn-info boton-ver button-29" onclick="document.location.href = '@Url.Content("~/Producto/MostrarInformacion/")@producto.ProductoID'">
                                    Ver
                                    </button>

                                    @if (@producto.CantidadEnStock != 0)
                                    {
                                        <form method="post" style ="margin-bottom: 0px !important;" action="@Url.Action("AgregarAlCarrito", "Home")">
                                            <input type="hidden" name="productoId" value="@producto.ProductoID" />
                                            <button type="submit" class="btn btn-outline-success boton-agregar-carrito button-29"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0M9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0" />
</svg></button>
                                        </form>
                                    }
                                    else
                                    {
                                        <h3 style="color: red; margin-top: 11px; margin-left: 30px;">AGOTADO</h3>

                                    }



                                </div>
                            </div>
                        </div>
                    </div>





                }
            </div>
        </div>
    </div>
</main>


